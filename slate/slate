config defaultToCurrentScreen true

#toggle App-Icons
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true 

#config gridBackgroundColor 71.2;71.2;71.2;0.8 <-- doesn't work
config gridCellBackgroundColor 0.0;0.0;255.0;1.0
config gridCellSelectedColor 175.95;198.9;229.5;1.0
config gridCellRoundedCornerSize 0


# HYPER-key
alias hyper ctrl;shift;alt;cmd

alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias lefthalf move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
alias righthalf move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
alias topleft corner top-left resize:screenSizeX/2;screenSizeY/2
alias topright corner top-right resize:screenSizeX/2;screenSizeY/2
alias bottomleft corner bottom-left resize:screenSizeX/2;screenSizeY/2
alias bottomright corner bottom-right resize:screenSizeX/2;screenSizeY/2

alias 1-full move screenOriginX;screenOriginY screenSizeX;screenSizeY 1440x900
alias 1-lefthalf move screenOriginX;screenOriginY screenSizeX/2;screenSizeY 1440x900
alias 1-righthalf move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY 1440x900
alias 1-topleft corner top-left resize:screenSizeX/2;screenSizeY/2 1440x900
alias 1-topright corner top-right resize:screenSizeX/2;screenSizeY/2 1440x900
alias 1-bottomleft corner bottom-left resize:screenSizeX/2;screenSizeY/2 1440x900
alias 1-bottomright corner bottom-right resize:screenSizeX/2;screenSizeY/2 1440x900

alias 2-full move screenOriginX;screenOriginY screenSizeX;screenSizeY 1920x1200
alias 2-lefthalf move screenOriginX;screenOriginY screenSizeX/2;screenSizeY 1920x1200
alias 2-righthalf move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY 1920x1200
alias 2-topleft corner top-left resize:screenSizeX/2;screenSizeY/2 1920x1200
alias 2-topright corner top-right resize:screenSizeX/2;screenSizeY/2 1920x1200
alias 2-bottomleft corner bottom-left resize:screenSizeX/2;screenSizeY/2 1920x1200
alias 2-bottomright corner bottom-right resize:screenSizeX/2;screenSizeY/2 1920x1200

# Numpad location Bindings
bind pad1 ${bottomleft}
bind pad2 push bottom bar-resize:screenSizeY/2
bind pad3 ${bottomright}
bind pad4 ${lefthalf}
bind pad5 ${full}
bind pad6 ${righthalf}
bind pad7 ${topleft}
bind pad8 push top bar-resize:screenSizeY/2
bind pad9 ${topright}

bind g:${hyper} grid padding:2 1440x900:6,4 1920x1200:8,5

#move using hyper+vim movements
bind h:${hyper} push left
bind j:${hyper} push down
bind k:${hyper} push up
bind l:${hyper} push right
bind up:${hyper} ${full}
bind down:${hyper} push bottom bar-resize:screenSizeY/2
bind left:${hyper} ${lefthalf}
bind right:${hyper} ${righthalf}

#Use only left hand for window hints
bind e:${hyper} hint QWEASDXCRFVTGB

#Position Social apps next to each other
layout 1monitor 'Tweetbot':REPEAT move screenOriginX;screenOriginY 440;screenSizeY
layout 1monitor 'Nachrichten':REPEAT move 440;screenOriginY 620;screenSizeY

#Position depending on title, vim benefits from long screen, tmux full screen and everything else doesn't have specific requirements
layout 1monitor 'iTerm':TITLE_ORDER=vim;tmux;bash,IGNORE_FAIL,REPEAT ${righthalf} | ${full} | ${bottomright} | push top bar-resize:screenSizeY/4

#Put all important apps in fullscreen
layout 1monitor 'Safari':REPEAT ${full}
layout 1monitor 'Reeder':REPEAT ${full}
layout 1monitor 'Mail':REPEAT ${full}
layout 1monitor 'Xcode':REPEAT ${full}
layout 1monitor 'Pocket':REPEAT ${full}
layout 1monitor 'Evernote':REPEAT ${full}
layout 1monitor 'iTunes':REPEAT ${full}

#Tile other apps
layout 1monitor 'Kalender':REPEAT ${bottomleft}
layout 1monitor 'Finder':MAIN_FIRST ${topleft}

default 1monitor count:1

layout 2monitors 'Safari':REPEAT ${2-full}
layout 2monitors 'Reeder':REPEAT move screenSizeX/2-1440/2;screenSizeY/2-900/2 1440;900 1920x1200
layout 2monitors 'Mail':REPEAT ${1-full}
layout 2monitors 'Xcode':REPEAT ${2-full}
layout 2monitors 'Pocket':REPEAT ${2-full}
layout 2monitors 'Evernote':REPEAT ${1-full}
layout 2monitors 'iTunes':REPEAT ${1-full}

layout 2monitors 'Kalender':REPEAT ${1-topleft}
layout 2monitors 'Finder':MAIN_FIRST ${2-topleft}

layout 2monitors 'iPhone Simulator':REPEAT push right none 1440x900

layout 2monitors 'iTerm':REPEAT ${2-righthalf} 1920x1200

layout 2monitors 'Tweetbot':REPEAT move screenOriginX;screenOriginY 440;screenSizeY 1440x900
layout 2monitors 'Nachrichten':REPEAT move screenOriginX+440;screenOriginY 620;screenSizeY 1440x900

default 2monitors count:2 

bind 1:${hyper} throw 0
bind 2:${hyper} throw 1

bind v:${hyper} focus 'MacVim'
bind t:${hyper} focus 'iTerm'
bind x:${hyper} focus 'Xcode'
bind i:${hyper} focus 'iTunes'
bind s:${hyper} focus 'Safari'
