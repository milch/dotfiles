{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [ "c", "cpp", "cuda", "objc", "objcpp" ],
      "rootPatterns": [ ".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/" ],
      "initializationOptions": { "cacheDirectory": "/tmp/ccls" }
    },
    "brazil-config": {
      "command": "barium",
      "filetypes": [ "brazil-config" ]
    }
  },
  "suggest.minTriggerInputLength": 0,
  "suggest.triggerAfterInsertEnter": true,
  "suggest.autoTrigger": "always",
  "suggest.completionItemKindLabels": {
    "method": " ",
    "function": "󰊕 ",
    "constructor": "󰎔 ",
    "variable": " ",
    "field": " ",
    "typeParameter": "T ",
    "constant": " ",
    "class": " ",
    "interface": " ",
    "struct": " ",
    "event": " ",
    "operator": " ",
    "module": "󰅩 ",
    "property": " ",
    "value": " ",
    "enum": " ",
    "enumMember": " ",
    "reference": " ",
    "keyword": " ",
    "file": " ",
    "folder": " ",
    "color": " ",
    "unit": " ",
    "snippet": " ",
    "text": " ",
    "default": " "
  },
  "suggest.formatItems": [
    "kind", // Icons defined above
    "abbr", // The found item
    "menu"  // No clue
  ],
  "suggest.detailField": "abbr",
  "suggest.labelMaxLength": 50,
  "suggest.maxCompleteItemCount": 15,
  "suggest.snippetIndicator": " ",
  "suggest.noselect": true,
  "solargraph.diagnostics": true,
  "solargraph.hover": true,
  "solargraph.formatting": true,
  "solargraph.completion": true,
  "codeLens.enable": true,
  "codeLens.position": "eol",
  "diagnostic.virtualText": true,
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "󰌵",
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.enableMessage": "never",
  "[ruby][typescript][rust][lua]": {
    "coc.preferences.formatOnSave": true,
  },
  "rust-analyzer.checkOnSave.enable": true,
  "rust-analyzer.checkOnSave.command": "clippy",
  "coc.preferences.bracketEnterImprove": true,
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-11",
      "path": "/Library/Java/JavaVirtualMachines/amazon-corretto-11.jdk/Contents/Home/",
      "default": true
    },
    {
      "name": "JavaSE-1.6",
      "path": "/Library/Java/JavaVirtualMachines/amazon-corretto-16.jdk/Contents/Home"
    }
  ],
  "java.import.gradle.wrapper.enabled": true,
  "java.import.gradle.java.home": "/Library/Java/JavaVirtualMachines/amazon-corretto-11.jdk/Contents/Home/",
  "semanticTokens.enable": false,
  "sumneko-lua.enableNvimLuaDev": true,
  "Lua.telemetry.enable": false,
  "snippets.ultisnips.pythonPrompt": false,
  "lightbulb.text": {
    // nerd-font: nf-mdi-lightbulb, text used when there're code actions
    "default": "󰌵",
    // nerd-font: nf-mdi-auto_fix, text used when there're code actions and quickfix exists
    "quickfix": "󰁨"
  }
}
